@model ProyectoDos.UI.Models.Factura

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle de factura</h1>

<div>
    <h4>Factura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdFactura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdFactura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.precioConIva)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precioConIva)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.precioSinIva)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precioSinIva)
        </dd>
    </dl>
</div>


<div class="col-md-10">
    <h5>Tours</h5>
    <table id="tablaC" class="table">
        <thead>
            <tr>
                <th>
                    ID Tour
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Precio
                </th>
                  <th>
                    Dias de servicio
                </th>
                <th>
                    Id del proveedor
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <tbody>
                @foreach (var item in Model.Tours)
                {
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                  
                    <td>
                           @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.dias)
                    </td>

                    <td>
                            @Html.DisplayFor(modelItem => item.IDProveedor)
                    </td>
                </tr>
                }
        </tbody>
    </table>



    <div class="col-md-10">
        <h5>Productos</h5>
        <table id="tabla" class="table">
            <thead>
                <tr>
                    <th>
                        ID Productos
                    </th>
                    <th>
                        Descripcion
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        Año de ingreso
                    </th>
                    <th>
                        Id del proveedor
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                    @foreach (var item in Model.Productos)
                    {
                    <tr>
                        <td>
                                @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.precio)
                        </td>
                        <td>
                                @Html.DisplayFor(modelItem => item.annoIngreso)
                        </td>
                       
                        <td>
                                @Html.DisplayFor(modelItem => item.IDProveedor)
                        </td>
                    </tr>
                    }
            </tbody>
        </table>
</div>





<div>
    <a asp-action="Index">Regresart</a>
</div>
