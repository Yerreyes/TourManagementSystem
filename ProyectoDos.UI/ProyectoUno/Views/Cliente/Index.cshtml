@model IEnumerable<ProyectoUno.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<div class="row mb-3">
    <div class="col">
        <a class="btn btn-primary" asp-action="Create">Crear nuevos Clientes</a>
    </div>
</div>

<form class="mb-3" asp-controller="Cliente" asp-action="Index" method="Post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Buscar cliente por cédula</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="searchString" />
        </div>
        <div class="col-sm-2">
            <input type="submit" class="btn btn-primary" value="Buscar" />
        </div>
    </div>

    @if (ViewData["Nombre"] == "x")
    {
        <div class="alert alert-info" role="alert">
            @ViewBag.resultado
        </div>
        <a class="btn btn-link" asp-action="Index">Mostrar todos los clientes</a>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            @ViewBag.resultado
        </div>
    }
</form>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Cedula)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>Año</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Profesion)</th>
            <th>@Html.DisplayNameFor(model => model.Correo)</th>
            <th>Dónde se enteró de la página?</th>
            <th>Contraseña</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => item.Profesion)</td>
                <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                <td>@Html.DisplayFor(modelItem => item.Entero)</td>
                <td>@Html.DisplayFor(modelItem => item.Contrasenna)</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Cedula">Actualizar</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Cedula">Información</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Cedula">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


