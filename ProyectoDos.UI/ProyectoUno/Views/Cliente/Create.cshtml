@model ProyectoUno.Models.Cliente

@{
    ViewData["Title"] = "Registro Cliente";
}

<h3>Registro</h3>

<h5>Cliente</h5>
<hr />
<div class="row">
    <div class="col-md-3" >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                Año
                <input asp-for="FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profesion" class="control-label"></label>
                <input asp-for="Profesion" class="form-control" />
                <span asp-validation-for="Profesion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                Dónde se enteró de la página?
                <select asp-for="@Model.Entero" class="form-select" asp-items="ViewBag.LaLista"></select>  
            </div>
            <div class="form-group">
                Contraseña
                <input asp-for="Contrasenna" class="form-control" />
                <span asp-validation-for="Contrasenna" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Registrar" class="btn btn-success" />
            </div>
            <div class="form-group">
                <p style="color:#FF00FFFF" ;>  @ViewBag.mensajeResultado</p>
            </div>

        </form>
    </div>
</div>

@if (User.IsInRole("administrador"))
{
    <div>
        <a asp-action="Index">Regresar a la lista</a>
    </div>
}

@if (!User.IsInRole("administrador"))
{
    <div>
        <a href="@Url.Action("Index", "Acesso")" class="ml-2"> Regresar </a>
       
    </div>
}



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
