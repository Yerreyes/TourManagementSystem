<div>

    @if (User.IsInRole("usuario"))
    {
        <li>
            @Html.ActionLink("Actualizar", "Edit", new { id = Model.Cedula })
        </li>
        <li>
            @Html.ActionLink("Eliminar", "Delete", new {  id = Model.Cedula })
        </li>
        <li>
            <a href="@Url.Action("Salir", "Acesso")" class="ml-2"> Salir </a>
        </li>
    }
    @if (User.IsInRole("administrador"))
    {
        <div>
            @Html.ActionLink("Regresar", "Index")
        </div>
    }



</div>
