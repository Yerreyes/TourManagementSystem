@model ProyectoUno.Models.Acesso

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height:100vh">
            <div class="col-8">
                <hr>
                <div class="container">
                    <div class="card">
                        <h2>Mis Ministritos CR</h2>
                    </div>
                </div>
                </hr>
                <hr>
                <div class="card">
                    <div class="card-body">
                        <h3>Iniciar Sesión </h3>
                        <form asp-action="Index" method="post">
                            <div class="form-group">
                                <li>Cédula </li>
                                <input type="text" id="login" class="fadeIn second" name="Id" placeholder="01-1111-1111" />
                                <span asp-validation-for="Id" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <li>Contraseña</li>
                                <input type="text" id="password" class="fadeIn third" name="Contrasenna" placeholder="Contraseña" />
                                <span asp-validation-for="Contrasenna" class="text-danger"></span>

                            </div>
                            <div class="form-group">

                                <input type="submit" value="Ingresar" class="btn btn-info" />

                            </div>
                        </form>
                        <div class="form-group">
                            <p style="color:#FF0000" ;> @ViewBag.mesaje</p>
                        </div>
                        <div class="d-flex justify-content-center links">
                            No estas registrado? <a href="@Url.Action("Create", "Cliente")" class="ml-2"> Registrarse </a>
                        </div>

                    </div>
                    </hr>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    </body>
    </html>

